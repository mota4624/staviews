<%= render "shared/second-header"%>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>

  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, class:"input-default", id:"name", placeholder:"フルネームを入力してください", maxlength:"40" %>
  </div>



    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email",  placeholder:"hoge@example.com", autofocus: true %>
  </div>



  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力してください" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">所属</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :affiliation, class:"input-default", id:"affiliation", placeholder:"例）○○店", maxlength:"40" %>
  </div>

    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">役職</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :position, class:"input-default", id:"position", placeholder:"例）店長", maxlength:"40" %>
  </div>

      <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">プロフィール写真</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.file_field :avatar, class:"input-default", id:"avatar" %>
  </div>


  <div class='register-btn'>
    <%= f.submit "新規登録" ,class:"register-red-btn" %>
  </div>

<% end %>
</div>

<%#= render "devise/shared/links" %>
